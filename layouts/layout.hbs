<!DOCTYPE html>
<html class="no-js">
<head prefix="g: http://ogp.me/ns#">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{{ title }} | Wouter Admiraal's Blog</title>
  <meta property="og:title" content="{{ title }}">
  <meta property="og:site_name" content="Wouter Admiraal's Blog" />
  <meta name="twitter:title" content="{{ title }}" />

  {{# if description }}
    <meta name="description" content="{{ description }}">
    <meta property="og:description" content="{{ description }}">
    <meta name="twitter:description" content="{{ description }}" />
  {{/ if }}

  <meta name="author" content="Wouter Admiraal <wad@wadmiraal.net>">

  <meta property="og:url" content="{{ permalink }}">
  <meta property="og:type" content="article">
  <meta name="twitter:site" content="@wadmiraal">
  <meta name="twitter:card" content="summary" />

  <meta name="keywords" content="drupal,development,web,web development,javascript,js,css,css3">
  <link href="/opensearch.xml" rel="search" title="wadmiraal.net" type="application/opensearchdescription+xml">
  {{# if home }}
  <link rel="canonical" href="http://wadmiraal.net/" />
  <script type="application/ld+json">
  {
    "@context" : "http://schema.org",
    "@type" : "WebSite",
    "name" : "wadmiraal.net",
    "alternateName" : "Wouter Admiraal's Blog",
    "url" : "http://wadmiraal.net"
  }
  </script>
  {{/ if }}
  <script type="application/ld+json">
  {
    "@context" : "http://schema.org",
    "@type" : "Person",
    "name" : "Wouter Admiraal",
    "url" : "http://wadmiraal.net",
    "sameAs" : [
      "http://www.twitter.com/wadmiraal",
      "https://www.linkedin.com/in/wadmiraal",
      "https://www.drupal.org/u/wadmiraal",
      "https://github.com/wadmiraal"
    ]
  }
  </script>
  <link rel="alternate" type="application/rss+xml" title="wadmiraal.net RSS" href="http://wadmiraal.net/feed.xml">

  <link rel="icon" sizes="72x72" href="/img/logo.png">
  <meta name="theme-color" content="#485566">

  <link rel="stylesheet" href="/css/all.min.css?v=1.0">
</head>
<body>

<nav id="posts-menu" class="site-menu" data-show-posts-tagged-with="">
  <div id="posts-tag-legends" class="site-menu__color-code-legends" data-show-legend-for="">
    <ul>
      {{ log site_tags }}
      {{# site_tags }}
        <li class="site-menu__color-code-legends__legend tag--border" data-tags="{{ render_tag tag }}">{{ tag }}</li>
      {{/ site_tags }}
    </ul>
  </div>

  <ul id="posts-items" class="overview">
    {{# unless home }}
      <li class="site-menu__item site-menu__item--back-to-home">
        <a href="/">&laquo; Back to the home page</a>
      </li>
    {{/ unless }}
    {{# site_posts }}
     {{ l}}
      <li class="site-menu__item{% if title == this.title %} active{% endif %}">
        <a class="tag--border" data-tags="{% for tag in this.tags %} {% endfor %}" href=""></a>
      </li>
    {{/ site_posts }}
  </ul>
</nav>

<header class="site-header">
  <span id="menu-toggle" class="site-header__menu-toggle">Blog</span>

  <ul class="site-header__about-links">
    <li class="site-header__about-links__item"><a class="icon icon-feed4" href="/feed.xml" title="RSS Feed">RSS Feed</a></li>
    <li class="site-header__about-links__item"><a class="icon icon-happy2" href="/about" title="About">About</a></li>
    <li class="site-header__about-links__item"><a class="icon icon-twitter3" href="http://twitter.com/wadmiraal" title="Twitter">Twitter</a></li>
    <li class="site-header__about-links__item"><a class="icon icon-drupal" href="http://drupal.org/u/wadmiraal" title="Drupal">Drupal</a></li>
    <li class="site-header__about-links__item"><a class="icon icon-github" href="http://github.com/wadmiraal/wadmiraal.net" title="Github">Github</a></li>
  </ul>
</header>

<div class="site-content">
  <div id="site-content">
    {% body %}
  </div>

  <div class="site-content__overlay"></div>
</div>

<script src="/js/all.min.js?v=1.0"></script>
<script type="text/javascript">
  blog.fx.init();
  blog.cookie.init();
  blog.pushState.init();

  if ( !blog.cookie.getValue() ) {
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-39415395-1']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  }
</script>

</body>
</html>
